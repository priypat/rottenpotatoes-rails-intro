-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class => @title_hilite}= link_to "Movies Title", movies_path(:sort=>'title'),:id=>"title_header"
      // %th{:class => @movie_highlight}= link_to "Movie Title", movies_path(:sorting_mechanism => 'title'), :id => "title_header"
      %th{:class =>'text-muted'} Rating
      %th{:class => @release_hilite}= link_to "Release Date", movies_path(:sort=>'release_date'),:id=>"release_date_header"
      %th{:class =>'text-muted'} More Info
      
      // %th{:class => ('hilite' if @hilite == 'title')}= link_to "Movie Title", movies_path(:sort_by => 'title'), id: "title_header" 
      // %th Rating
      // %th{:class => ('hilite' if @hilite == 'release_date')}= link_to "Release Date", movies_path(:sort_by => 'release_date'), id: "release_date_header"
      // %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
